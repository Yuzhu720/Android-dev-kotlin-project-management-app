<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.southampton.comp6239.ProjectActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            tools:ignore="MissingConstraints"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
            android:background="@color/purple_500">
            <TextView
                android:id="@+id/project_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="-3dp" />
        </androidx.appcompat.widget.Toolbar>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:background="@drawable/border">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/description_label"
                    android:layout_width="75dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:text="Description"
                    android:textColor="@color/black" />
                <ImageView
                    android:src="@drawable/descripton"
                    android:layout_marginStart="8dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/project_detail_description"
                android:layout_width="305dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:text="xxxxxxx"
                android:lines="3"
                android:ems="10"
                android:background="@drawable/textview_border"
                android:inputType="textMultiLine"
                app:layout_constraintStart_toEndOf="@+id/description"
                app:layout_constraintTop_toBottomOf="@+id/project_detail_constrain_one" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/creat_time_label"
                    android:layout_width="wrap_content"
                    android:layout_height="29dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:text="Create Time"
                    android:textColor="@color/black" />
                <ImageView
                    android:src="@drawable/date"
                    android:layout_marginStart="8dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/project_detail_createtime"
                android:layout_width="106dp"
                android:layout_height="50dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/textview_border"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:paddingLeft="10dp"
                android:text="xxxxxxxxxxxxx" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/deadline_label"
                    android:layout_width="65dp"
                    android:layout_height="29dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Deadline"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/project_detail_constrain_one" />
                <ImageView
                    android:src="@drawable/date"
                    android:layout_marginStart="20dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/project_detail_deadline"
                android:layout_width="108dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:ems="10"
                android:background="@drawable/textview_border"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:text="xxxxxxxxxxxxx"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:background="@drawable/border">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/status_label"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:text="Status"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/project_detail_constrain_one" />
                <ImageView
                    android:src="@drawable/statue"
                    android:layout_marginStart="8dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/project_detail_status"
                android:textStyle="bold"
                android:layout_width="108dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:ems="10"
                android:background="@drawable/textview_border"
                android:gravity="center_horizontal"
                android:inputType="textMultiLine"
                android:text="Completed"
                android:paddingLeft="10dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:animateLayoutChanges="true"
                android:id="@+id/btn_change_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/change_status"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/btn_border"
                    android:text="Complete"
                    android:textColor="@color/white"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#C1DDF1">

            >

            <TextView
                android:id="@+id/member"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="14dp"
                android:text="Members"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/member_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="220dp"
                android:background="@drawable/member" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/border">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/project_detail_member_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#C1DDF1">

            <TextView
                android:id="@+id/tasks"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginStart="16dp"
                android:text="Tasks"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.SearchView
                android:id="@+id/project_detail_search"
                android:layout_width="250dp"
                android:layout_height="42dp">
            </androidx.appcompat.widget.SearchView>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:paddingBottom="10dp"
            android:background="@drawable/border">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/project_detail_task_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Manager"
            android:textSize="20dp"
            android:textColor="@color/black">
        </TextView>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/head"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="30dp">
                <TextView
                    android:id="@+id/project_detail_manager_name"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daniel White"/>
                <TextView
                    android:id="@+id/manager_email"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-mail"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>